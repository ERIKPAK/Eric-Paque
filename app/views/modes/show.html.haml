%ol.breadcrumb{itemprop: "breadcrumb"}
  %li{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to root_path, itemprop: "url", title: "Accueil" do
      %span{itemprop: "title"}>= "Accueil"
  %li{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to scales_path, itemprop: "url", title: "Gammes" do
      %span{itemprop: "title"}>= "Gammes"
  %li{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to scale_path(@scale), itemprop: "url", title: @scale.title, class: "disable" do
      %span{itemprop: "title"}>= @scale.title
  %li.active{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to [@key, @scale, @mode], itemprop: "url", title: @scale.title, class: "disable" do
      %span{itemprop: "title"}>= "Mode #{@mode.title}"

%article#scale
  %header
    .page-header
      %h1= title "Mode #{@mode.title}"


%section#mode
  .row
    .col-xs-6.col-md-6
      .panel.panel-primary
        .panel-heading
          %h2.panel-title
            Notation
        .panel-body
          .staff.scale-staff{"data-id" => @scale.id, "data-staff" => @mode.octavized_notes.map {|n| [n]}.to_json, "data-staff-clef" => "treble", "width" => 523}
    .col-xs-6.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title
            Notes
        .panel-body
          %h3
            - @mode.keys.each do |key|
              = link_to key, note_path(key.name_for_url), title: key.long_name
    .col-xs-6.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title
            Intervales
        .panel-body
          %h3=@mode.step_names.join(", ")


  - unless @mode.chord_scales.empty?
    %nav.related-chords
      %h3 Accords associés :
      .row.chords-list
        - @mode.chord_scales.each do |chord_scale|
          = render chord_scale.chord, :key => (@scale.key || Key.default).shifted(-1 * chord_scale.offset)

%nav#key-selector
  .panel.panel-default
    .panel-heading
      %h2.panel-title Afficher dans la tonalité
    .panel-body
      %ul.nav.nav-pills
        - Key.primaries.each do |key|
          %li{:class => ("active" if @key == key || (@key.nil? && key.name == "C"))}= link_to key, [key, @scale, @mode]

