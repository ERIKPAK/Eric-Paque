%ol.breadcrumb{itemprop: "breadcrumb"}
  %li{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to root_path, itemprop: "url", title: "Accueil" do
      %span{itemprop: "title"}>= "Accueil"
  %li.active{itemscope: true, itemtype: "http://data-vocabulary.org/Breadcrumb"}
    =link_to notes_path, itemprop: "url", title: "Notes", class: "disable" do
      %span{itemprop: "title"}>="Notes"

.page-header
  %h1= title "Notes"
%h2.lead= description 'Liste des notes et de leurs équivalents enharmoniques'

#section#notes
  %table.table.table-hover
    %thead
      %tr
        %th Note
        %th Notation anglaise
        %th Notation française

    %tbody
    -(0...12).each do |index|
      -@keys.select {|key| key.index == index}.each do |key|
        %tr{class: key.index.even? ? "active" : ""}
          %td
            %strong= link_to key.long_name, note_path(key.name_for_url), title: key.long_name
          %td
            =key.name
          %td
            =key.french_name

