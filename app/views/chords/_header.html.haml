%header
  .page-header
    %h1
      = link_to_unless_current @chord.title(true), [@key, @chord]
      %small= @chord.main_symbol_name

  .row
    .col-xs-12.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title Notation
        .panel-body
          .staff.chord-staff{"data-id" => @chord.id, "data-staff" => @chord.octavized_notes.to_json, "data-staff-clef" => "treble", "width" => 223}


    .col-xs-6.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title Symbole
        .panel-body
          %h3=@chord.main_symbol_name
    .col-xs-6.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title
            Notes
        .panel-body
          %h3
            - @chord.keys.each do |key|
              = link_to key, note_path(key), title: key.name_for_seo
    .col-xs-12.col-md-3
      .panel.panel-primary
        .panel-heading
          %h2.panel-title
            Intervalles
        .panel-body
          - @chord.intervals.each do |i|
            %h3= link_to i.long_name, interval_path(i)

.clearfix

%nav.infos
  %h3 Informations complémentaires
  %p= @chord.information
  - if @chord.parent
    %p
      %label Accord parent :
      = link_to @chord.parent, [@key, @chord.parent]
  - if @chord.other_symbol_names.present?
    %p
      %label Autres symboles utilisées :
      #{@chord.other_symbol_names.join(', ')}
  %p
    %label Nombre de notes :
    =@chord.notes.count